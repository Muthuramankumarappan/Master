<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
   default-init-method="init"
   default-destroy-method="destroy"
   >

   <bean id="iron" class="raw.Iron" scope="singleton">
   <property name="density" value="isGood"></property>
   </bean>   
   
   <bean id="handleBar" class="handleBar.HandleBar">
   <constructor-arg ref="iron"></constructor-arg>
   <property name="bell" ref = "bell"></property>
   </bean>
   
   <bean id="handleBarWithoutBell" class="handleBar.HandleBar">
   <constructor-arg ref="iron"></constructor-arg>
   </bean>
   
   <bean id="bell" class="bell.Bell"></bean>
   </beans>